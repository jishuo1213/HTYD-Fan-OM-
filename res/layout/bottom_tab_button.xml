<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_tab_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/title_bar"
        android:drawableBottom="@drawable/tab_weixin_normal"
        android:gravity="center"
        android:text="我的考勤"
        android:textColor="@color/white"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tv_tab_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/title_bar"
        android:drawableBottom="@drawable/tab_find_frd_normal"
        android:gravity="center"
        android:text="待办提醒"
        android:textColor="@color/white"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tv_tab_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/title_bar"
        android:drawableBottom="@drawable/tab_address_normal"
        android:gravity="center"
        android:text="任务管理"
        android:textColor="@color/white"
        tools:ignore="HardcodedText" />

    
    
    <TextView
        android:id="@+id/tv_tab_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/title_bar"
        android:drawableBottom="@drawable/tab_settings_normal"
        android:gravity="center"
        android:text="设置"
        android:textColor="@color/white"
        tools:ignore="HardcodedText" />

</LinearLayout>