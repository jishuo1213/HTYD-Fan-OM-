<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg_color" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        tools:ignore="HardcodedText" >

        <TextView
            android:id="@+id/create_title"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="任务标题"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edit_task_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:hint="请输入任务标题"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/description"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="任务描述"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edit_task_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:hint="请输入任务描述"
            android:lines="3"
            android:textSize="18sp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:measureWithLargestChild="true"
            android:orientation="vertical" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/work_location"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="right|center_vertical"
                    android:text="工作地点："
                    android:textColor="@color/key_text"
                    android:textSize="18sp" />

                <com.htyd.fan.om.util.ui.TextViewWithBottomLine
                    android:id="@+id/tv_work_location"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:hint="选择工作地点"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/install_location"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="安装地点："
                    android:textColor="@color/key_text"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edit_install_location"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:hint="输入安装地点"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="right|center_vertical"
                    android:text="预计开始时间："
                    android:textColor="@color/key_text"
                    android:textSize="18sp" />

                <com.htyd.fan.om.util.ui.TextViewWithBottomLine
                    android:id="@+id/tv_start_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:hint="选择开始时间"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/need_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="预计工作耗时："
                    android:textColor="@color/key_text"
                    android:textSize="18sp" />

                <com.htyd.fan.om.util.ui.TextViewWithBottomLine
                    android:id="@+id/tv_work_need_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:hint="选择工作需要时间"
                    android:textSize="18sp" />
            </TableRow>

