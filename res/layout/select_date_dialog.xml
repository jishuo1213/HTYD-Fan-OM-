<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="测试"
        android:textSize="15sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tv_pre_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="上个月"
        android:textSize="15sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tv_next_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="下个月"
        android:textSize="15sp"
        tools:ignore="HardcodedText" />
    
    <GridView
        android:id="@+id/grid_week_chinese"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_month"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:numColumns="7" />

    <View
        style="@style/h_line"
        android:layout_height="1px"
        android:layout_below="@id/tv_month"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/key_text" />

    <GridView
        android:id="@+id/grid_attend_calendar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/grid_week_chinese"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:cacheColorHint="#00000000"
        android:numColumns="7" />

    <View
        style="@style/v_line"
        android:layout_width="1px"
        android:layout_alignBottom="@id/grid_attend_calendar"
        android:layout_alignLeft="@id/grid_attend_calendar"
        android:layout_below="@id/tv_month" />

</RelativeLayout>