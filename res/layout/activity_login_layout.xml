<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/skyblue"
    tools:ignore="HardcodedText" >

    <TextView
        android:id="@+id/botton_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="5dp"
        android:gravity="center"
        android:text="@string/login_botton_text" />

    <View
        android:id="@+id/depart_line"
        style="@style/v_line"
        android:layout_width="1px"
        android:background="@color/gray_half"
        android:layout_above="@id/botton_view"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/user_name"
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/depart_line"
        android:padding="10dp"
        android:text="用户名"
        android:textSize="16sp" />

    <com.htyd.fan.om.util.ui.LineEditText
        android:id="@+id/edit_login_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_name"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/depart_line"
        android:background="@null"
        android:hint="请输入用户名"
        android:padding="5dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/password_text"
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/user_name"
        android:layout_below="@id/edit_login_username"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/depart_line"
        android:padding="10dp"
        android:text="密码"
        android:textSize="16sp" />

    <com.htyd.fan.om.util.ui.LineEditText
        android:id="@+id/edit_login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_text"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/depart_line"
        android:background="@null"
        android:hint="请输入密码"
        android:padding="5dp"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_log_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_login_password"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/depart_line"
        android:textColor="@color/key_text"
        android:text="登录" />
	
    <CheckBox 
        android:id="@+id/check_remember_pasword"
        android:layout_below="@id/btn_log_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="记住密码，下次自动登录"
        android:textColor="@color/key_text"
        android:layout_toRightOf="@id/depart_line"
        android:layout_marginTop="10dp"
        />
    
</RelativeLayout>